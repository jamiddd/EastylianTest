<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingBottom="64dp"
    android:layout_height="match_parent"
    style="@style/nonPrimaryFragment"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cakeBaseHeading"
            style="@style/ListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base of the Cake" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cakeBaseRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:clipToPadding="false"
            android:minHeight="200dp"
            android:paddingStart="8dp"
            android:paddingBottom="24dp"
            tools:itemCount="1"
            tools:listitem="@layout/base_cake_item">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/noBaseCakes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="No items found"
            android:visibility="gone" />

        <TextView
            android:id="@+id/cakeFlavorHeading"
            style="@style/ListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flavor of the Cake" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cakeFlavorRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:clipToPadding="false"
            android:minHeight="200dp"
            android:paddingStart="8dp"
            android:paddingBottom="24dp"
            tools:itemCount="1"
            tools:listitem="@layout/base_cake_item" />

        <TextView
            android:id="@+id/noFlavorCakes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="No items found"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>