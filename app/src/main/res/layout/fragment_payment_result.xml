<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/paymentAnimationSuccess"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/payment_success"
        tools:visibility="visible" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/paymentAnimationFailure"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/payment_failed" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/paymentAnimationLoading"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/cat_loader" />

    <TextView
        android:id="@+id/paymentResultMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Payment was successful"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/paymentAnimationSuccess"
        app:layout_constraintStart_toStartOf="@+id/paymentAnimationSuccess"
        app:layout_constraintTop_toBottomOf="@+id/paymentAnimationSuccess" />

    <Button
        android:id="@+id/checkOrderBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Check Order"
        android:visibility="invisible"
        app:icon="@drawable/ic_round_keyboard_arrow_right_24"
        app:layout_constraintEnd_toEndOf="@+id/paymentResultMessage"
        app:layout_constraintStart_toStartOf="@+id/paymentResultMessage"
        app:layout_constraintTop_toBottomOf="@+id/paymentResultMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>