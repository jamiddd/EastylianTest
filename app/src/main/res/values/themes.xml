    <style name="myTextStyle" parent="TextAppearance.AppCompat.Medium">

    </style>

    <style name="nonPrimaryFragment">
        <item name="android:background">#FAFAFA</item>
    </style>

    <style name="tableItemBackground">
        <item name="android:background">@drawable/light_grey_rounded_rect</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="headerText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="normalImportantText">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="textLogoTheme">
        <item name="srcCompat">@drawable/ic_text_logo</item>
    </style>

    <style name="DialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorPrimary">@color/purple_500</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="Theme.TabLayoutText" parent="@style/TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/manrope_semi_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TitleTextExpanded" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/lobster</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleTextExpandedAccount" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/lobster</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleTextAccount" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.Button.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="iconTint">#222222</item>
    </style>

    <style name="Widget.BottomSheet.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheet.MaterialCardView</item>
    </style>

    <style name="ShapeAppearanceOverlay.BottomSheet.MaterialCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
    </style>

    <style name="generalBackground">
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="generalDraweeBackground">
        <item name="placeholderImage">@color/colorGrey</item>
    </style>

    <style name="customBottomSheetBackground">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="miniCakeItem">
        <item name="android:background">@color/mini_cake_background_color</item>
    </style>

    <style name="ListItem">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="headerButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="listHeaderItem" parent="ListItem">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="logOutBtn" parent="@style/ListItem">
        <item name="android:background">@drawable/light_grey_rounded_rect</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="ToggleButtonStyle" parent="Widget.MaterialComponents.MaterialButtonToggleGroup">

    </style>

    <style name="baseCake">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabMode">auto</item>
        <item name="tabTextAppearance">@style/Theme.TabLayoutText</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="AdminDashToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="primaryButtonBackgroundTint">
        <item name="android:backgroundTint">#DA722C</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DeliveryToggle">
        <item name="android:background">@color/blueLightBackground</item>
    </style>

    <style name="DeliveryToggleText">
        <item name="android:textColor">@color/blueDarkTextColor</item>
    </style>

    <style name="SettingsMenuItem" parent="@style/ListItem">
        <item name="android:minHeight">56dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="drawableEndCompat">@drawable/ic_round_keyboard_arrow_right_24</item>
    </style>

    <style name="CustomChipChoice" parent="Widget.MaterialComponents.Chip.Choice">

    </style>

    <style name="GenericBtn" parent="Theme.Button.IconOnly">
        <item name="iconTint">@color/primaryColor</item>
    </style>

</resources>